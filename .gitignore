# -----------------------------------------------------------------------------
.env
.env.local
.env.*.local
.env.production
.env.development
backend/.env
frontend/.env

# Keep example env files
!.env.example
!backend/.env.example
!frontend/.env.example

# -----------------------------------------------------------------------------
# IDE and Editors
# -----------------------------------------------------------------------------
.vscode/
!.vscode/extensions.json
!.vscode/settings.json.example
.idea/
*.swp
*.swo
*.sw?
*~
*.sublime-workspace
*.sublime-project

